<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="EmptyViewsText" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RecipeListItemTitleText" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="RecipeListItemMetaText" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

</resources>
